<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutFilaOp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDigC"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonDigC_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonDigFondo"
            android:textColor="@color/buttonDigTexto"/>

        <Button
            android:id="@+id/buttonDigDSign"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonDigSign_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonDigFondo"
            android:textColor="@color/buttonDigTexto"/>

        <Button
            android:id="@+id/buttonDigPotencia"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonOpPotencia_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonDigFondo"
            android:textColor="@color/buttonDigTexto"/>

        <Button
            android:id="@+id/buttonDigPorcentaje"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonOpMod_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonOpFondo"
            android:textColor="@color/buttonOpTexto"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutFilaDos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDigUno"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonDigUno_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonDigFondo"
            android:textColor="@color/buttonDigTexto"/>

        <Button
            android:id="@+id/buttonDigDos"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonDigDos_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonDigFondo"
            android:textColor="@color/buttonDigTexto"/>

        <Button
            android:id="@+id/buttonDigTres"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonDigTres_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonDigFondo"
            android:textColor="@color/buttonDigTexto"/>

        <Button
            android:id="@+id/buttonDigMult"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonOpMult_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonOpFondo"
            android:textColor="@color/buttonOpTexto"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutFilaTres"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDigCuatro"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonDigCuatro_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonDigFondo"
            android:textColor="@color/buttonDigTexto"/>

        <Button
            android:id="@+id/buttonDigCinco"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonDigCinco_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonDigFondo"
            android:textColor="@color/buttonDigTexto"/>

        <Button
            android:id="@+id/buttonDigSeis"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonDigSeis_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonDigFondo"
            android:textColor="@color/buttonDigTexto"/>

        <Button
            android:id="@+id/buttonDigMenos"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonOpMenos_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonOpFondo"
            android:textColor="@color/buttonOpTexto"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutFilaCuatro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDigSiete"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonDigSiete_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonDigFondo"
            android:textColor="@color/buttonDigTexto"/>

        <Button
            android:id="@+id/buttonDigOcho"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonDigOcho_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonDigFondo"
            android:textColor="@color/buttonDigTexto"/>

        <Button
            android:id="@+id/buttonDigNueve"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonDigNueve_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonDigFondo"
            android:textColor="@color/buttonDigTexto"/>

        <Button
            android:id="@+id/buttonDigMas"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonOpMas_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonOpFondo"
            android:textColor="@color/buttonOpTexto"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutFilaCinco"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDigCero"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/buttonDigCero_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonDigFondo"
            android:textColor="@color/buttonDigTexto"/>

        <Button
            android:id="@+id/buttonDigPunto"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonDigPunto_Text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/buttonDigFondo"
            android:textColor="@color/buttonDigTexto"/>

        <Button
            android:id="@+id/buttonDigIgual"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/buttonOpFondo"
            android:text="@string/buttonDigIgual_Text"
            android:textColor="@color/buttonOpTexto"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>